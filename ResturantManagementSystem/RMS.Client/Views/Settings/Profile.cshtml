    ViewBag.Title = "Profile Page";
}

<!-- Content Wrapper. Contains page content -->

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1 style="text-align: center;">
            ADMIN PROFILE 
            
        </h1>
